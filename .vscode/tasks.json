{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "build via makefile",
			"command": "/usr/bin/make",
			"args": [
				"clean",
				"${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/g++"
		}
	]
}